{% extends 'base.html.twig' %}

{% block title %}List habitats!{% endblock %}

{% block breadcrumbs %}
    {{ parent() }}
    <li class="breadcrumb-item active">Habitats</li>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="d-flex justify-content-center align-items-center">
            <h1>Habitat list for {{ app.user.firstName }}:</h1>
            <a href="{{ path('app_new_habitat') }}" class="btn btn-info ml-3">Add Habitat</a>
        </div>
        <div class="row justify-content-center">
            {% for habitat in habitats %}
                <div>
                    <h3>{{ habitat.displayName }}</h3>
                    <p>{{ habitat.streetAddress }}</p>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
