{% extends 'base.html.twig' %}

{% block title %}List habitats!{% endblock %}

{% block breadcrumbs %}
    {{ parent() }}
    <li class="breadcrumb-item active">Habitats</li>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="d-flex justify-content-center align-items-center">
            <h1>Habitat list for {{ app.user.firstName }}:</h1>
            <a href="{{ path('app_new_habitat') }}" class="btn btn-info ml-3">Add Habitat</a>
        </div>
        <div class="d-flex flex-column align-items-center">
            {% for habitat in habitats %}
                <div class="border rounded text-center px-3 my-3">
                    <h3 class="pt-2">{{ habitat.displayName }}</h3>
                    <p class="m-0">{{ habitat.streetAddress }}</p>
                    <a href="{{ path('app_view_habitat', {'id': habitat.id}) }}" class="fabOrangeText">
                        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-right-square-fill mb-2" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm2.5 8.5a.5.5 0 0 1 0-1h5.793L8.146 5.354a.5.5 0 1 1 .708-.708l3 3a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708-.708L10.293 8.5H4.5z"/>
                        </svg>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
